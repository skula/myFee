<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
        android:background="#ffffff"
        android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Saisissez votre code secret."
        android:textColor="#3c3c3c"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
                android:layout_marginTop="20px">

        <EditText
            android:id="@+id/valPw1"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:editable="false"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:textColor="#3c3c3c"/>

        <EditText
            android:id="@+id/valPw2"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:editable="false"
            android:textSize="30sp"
            android:gravity="center_horizontal" 
            android:textColor="#3c3c3c"/>

        <EditText
            android:id="@+id/valPw3"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:editable="false"
            android:textSize="30sp"
            android:gravity="center_horizontal" 
            android:textColor="#3c3c3c"/>

        <EditText
            android:id="@+id/valPw4"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:editable="false"
            android:textSize="30sp"
            android:gravity="center_horizontal" 
            android:textColor="#3c3c3c"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:layout_marginTop="20px">

        <Button
            android:id="@+id/btnPw1"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="1" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>

        <Button
            android:id="@+id/btnPw2"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="2" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>

        <Button
            android:id="@+id/btnPw3"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="3" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPw4"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="4" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>

        <Button
            android:id="@+id/btnPw5"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="5" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>

        <Button
            android:id="@+id/btnPw6"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="6" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPw7"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="7" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>

        <Button
            android:id="@+id/btnPw8"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="8" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>

        <Button
            android:id="@+id/btnPw9"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="9" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:layout_width="150px"
            android:layout_height="100px"
            android:enabled="false" 
			 
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>

        <Button
            android:id="@+id/btnPw0"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="0" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>

        <Button
            android:id="@+id/btnPwDel"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="Del" 
            android:textSize="30sp"
             
			android:textColor="#ffffff"
			android:background="@drawable/btn_grey"/>
    </LinearLayout>
        
        <TextView
        android:id="@+id/pwError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#ff0000"
        android:textSize="24sp" 
                android:layout_marginTop="18px"
                android:layout_gravity="center_horizontal"/>

</LinearLayout>